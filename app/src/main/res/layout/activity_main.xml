<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/bg_merah"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bg_1">

        <TextView
            android:id="@+id/text"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Hi, Rayhan Afit Wijaya"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/scan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text"
            android:background="@drawable/scan"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"/>

         <ImageView
             android:id="@+id/nontifikasi"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_toRightOf="@id/scan"
             android:background="@drawable/nontifikasi"
             android:layout_marginTop="12dp"
             android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@id/text2"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Wilayah Anda"
            android:layout_below="@id/text"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:text="Jabodetabek (Jakarta, Depok, Tanggerang, Bekasi) dan Palembang"
            android:layout_below="@id/text2"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/nontifikasi"
            android:layout_marginLeft="330dp"
            android:background="@drawable/menubar"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/gambarbesar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/bg_merah"
        android:background="@drawable/gmbr_bsr"/>

    <RelativeLayout
        android:id="@+id/menu2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gambarbesar"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/text4"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Barang yang dapat di klaim"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Lihat Semua"
            android:layout_toRightOf="@id/text4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="90dp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="jangan lewatkan kesempatan untuk mendapatkan barang - barang ini"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/text4"/>

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/text5"
            android:background="@drawable/sirup"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"/>

        <RelativeLayout
            android:id="@+id/klaim_srp"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_below="@id/text5"
            android:background="#CFD2CF"
            android:layout_toRightOf="@id/img_2"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/text6"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="ABC SQUASH DELIGHT BT..."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/klaim"
                android:layout_toRightOf="@id/text6"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="45ML"
                android:layout_below="@id/text6"
                android:layout_marginLeft="15dp"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/text7"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:text="Rp.9.900 Member"
                android:layout_below="@id/text6"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Rp.11.200"
                android:textSize="10dp"
                android:layout_below="@id/text7"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_white_shadow"
            android:layout_below="@id/klaim_srp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/apel"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/apel"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="What's on"
                android:textColor="@android:color/holo_red_dark"
                android:layout_below="@id/apel"
                android:layout_marginLeft="56dp"
                android:textSize="10dp"/>

            <ImageView
                android:id="@+id/love"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:background="@drawable/love"
                android:layout_toRightOf="@id/apel"
                android:layout_marginLeft="83dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Benefits"
                android:textSize="10dp"
                android:layout_below="@id/apel"
                android:layout_marginLeft="186dp"/>

            <ImageView
                android:id="@+id/orang"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/orang"
                android:layout_toRightOf="@id/love"
                android:layout_marginLeft="83dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Account"
                android:textSize="10dp"
                android:layout_below="@id/apel"
                android:layout_marginLeft="310dp"/>



        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>